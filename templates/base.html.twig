<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {# <script src = "https://kit.fontawesome.com/c387560c24.js" crossorigin="anonymous"></script> #}
        
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <div id="root">
        <header class="header">
        <h2>Biblio</h2>
        <div class="navigation">
            <a href="{{ path('home') }}">Acceuil</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('gestion', { 'entity': "home" }) }}">Gestion</a>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('parcourir') }}">Parcourir les livres</a>
            {% endif %}
            <a href="/about">A propos</a>

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('logout') }}"><i class="fa-solid fa-right-from-bracket"></i>Déconnexion</a>
            {% else %}
                <a href="{{ path('login') }}"><i class="fa-solid fa-right-to-bracket"></i>Connexion</a>
            {% endif %}
        </div>
        <i class="fas fa-bars burger"></i>
    </header>
        {% block body %}{% endblock %}
    </div>
    </body>
</html>
